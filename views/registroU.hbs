<div class="container">
    <div class="row animated bounceIn">
        <div class="card bg-info p-4 mt-5">
            <div class="card-body">
                <form action="login/guardarUsuario" method="post">
                    <div class="card-header bg-success text-white text-center mb-3">
                        <h3>Registro Usuarios</h1>
                    </div>
                    <div class="input-group mt-5">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i
                                    class="bi bi-person-circle"></i></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default" id="usuario" name="usuario"
                            aria-describedby="inputGroup-sizing-default" placeholder="Usuario" required>
                    </div>
                    <div class="input-group mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i
                                    class="bi bi-key"></i></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default" id="password" name="password"
                            aria-describedby="inputGroup-sizing-default" placeholder="Contraseña" required>
                    </div>
                    <div class="input-group mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i
                                    class="bi bi-envelope"></i></i></span>
                        </div>
                        <input type="text" class="form-control" aria-label="Default" id="email" name="email"
                            aria-describedby="inputGroup-sizing-default" placeholder="Correo" required>
                    </div>
                    <div class="input-group mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i
                                    class="bi bi-people-fill"></i></span>
                        </div>
                        <select class="form-select" aria-label="Default select example" id="staff" name="staff"
                            aria-describedby="inputGroup-sizing-default" required>
                            <option value="" selected disabled >¿Eres del Staff?</option>
                            <option value="s">Si</option>
                            <option value=" ">No</option>
                        </select>
                    </div>
                    <div class="form-group"><br>
                        <button type="submit" class="btn btn-warning w-100 mt-3">Registrar</button>
                        <a href="/" class="btn btn-danger w-100 mt-3">Cancelar</a>
                    </div>
                    <div class="form-group"><br>
                        <p style="text-align: center; font-size: 14px">Si ya tienes cuenta ingresa <br> haciendo
                            click <a href="/">aqui</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>