<div class="container">
    <div class="row col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card my-2">
            <div class="card-body">
                <form action="/control/guardarLista" method="post">
                    <div class="card-header bg-success text-white text-center mb-3">
                        <h3>Agregar Lista</h1>
                    </div>
                    <div class="input-group mt-5">
                        <input type="text" class="form-control" aria-label="Default" id="nLista" name="nLista"
                            aria-describedby="inputGroup-sizing-default" placeholder="Nombre Lista" required>
                    </div>
                    <div class="input-group mt-4">
                        <input type="number" class="form-control" aria-label="Default" id="presupuesto" name="presupuesto"
                            aria-describedby="inputGroup-sizing-default" placeholder="Presupuesto" required>
                    </div>
                    <div class="form-group"><br>
                        <button type="submit" class="btn btn-warning w-100 mt-3">Registrar Lista</button>
                        <a href="javascript:history.back()" class="btn btn-danger w-100 mt-3">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>