<div class="container">
    <div class="row col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card my-2">
            <div class="card-body">
                <form action="/control/guardarTienda" method="post">
                    <div class="card-header bg-success text-white text-center mb-3">
                        <h3>Registro de Tiendas</h1>
                    </div>
                    <div class="input-group mt-5">
                        <input type="text" class="form-control" aria-label="Default" id="ntienda" name="ntienda"
                            aria-describedby="inputGroup-sizing-default" placeholder="Nombre Tienda" required>
                    </div>
                    <div class="input-group mt-4">
                        <input type="text" class="form-control" aria-label="Default" id="direccion" name="direccion"
                            aria-describedby="inputGroup-sizing-default" placeholder="Direccion" required>
                    </div>
                    <div class="input-group mt-4">
                        <input type="text" class="form-control" aria-label="Default" id="ciudad" name="ciudad"
                            aria-describedby="inputGroup-sizing-default" placeholder="Ciudad" required>
                    </div>
                    <div class="input-group mt-4">

                        <select class="form-select" aria-label="Default select example" id="region" name="region"
                            aria-describedby="inputGroup-sizing-default" required>
                            <option value="" selected disabled>Region</option>
                                <option value="1">Tarapacá</option>
                                <option value="2">Antofagasta</option>
                                <option value="3">Atacama</option>
                                <option value="4">Coquimbo</option>
                                <option value="5">Valparaiso</option>
                                <option value="6">O'Higgins</option>
                                <option value="7">Maule</option>
                                <option value="8">Bío Bío</option>
                                <option value="9">Araucanía</option>
                                <option value="10">Los Lagos</option>
                                <option value="11">Aysén</option>
                                <option value="12">Magallanes y Antartica</option>
                                <option value="13">Metropolitana</option>
                                <option value="14">Los Rios</option>
                                <option value="15">Arica y Parinacota</option>
                                <option value="16">Ñuble</option>
                        </select>
                    </div>
                    <div class="form-group"><br>
                        <button type="submit" class="btn btn-warning w-100 mt-3">Registrar Tienda</button>
                        <a href="javascript:history.back()" class="btn btn-danger w-100 mt-3">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>